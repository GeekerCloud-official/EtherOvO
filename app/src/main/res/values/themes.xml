<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- 统一圆角和对话框主题定义 -->
    <dimen name="dialog_corner_radius">16dp</dimen>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerSize">@dimen/dialog_corner_radius</item>
    </style>

    <!-- Base application theme. -->
    <!-- 我们恢复使用最基础的M3主题，不再搞复杂的子主题 -->
    <style name="Theme.EtherOvO" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorPrimaryContainer">@color/primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/onPrimaryContainer</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <item name="colorSecondaryContainer">@color/secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/onSecondaryContainer</item>
        <!-- Error color. -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/onBackground</item>
        <!-- Surface colors (for cards, dialogs, etc.) -->
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/onSurface</item>
        <item name="colorSurfaceVariant">@color/surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/onSurfaceVariant</item>

        <!-- Dialog Theme -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/is_light_theme</item>
    </style>
</resources>